<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/opaqueLightBlue"
    android:padding="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="nyc.c4q.capstone.menuCategories.AboutVillageActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo_imageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:padding="8dp"
        android:src="@drawable/community_logo" />


    <TextView
        android:layout_below="@id/logo_imageView"
        android:id="@+id/about_village_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/about_village_text"
        android:textColor="@color/darkBlue"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:textSize="20sp" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/about_village_quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_village_textview"
        android:text="@string/about_village_quote"
        android:textColor="@color/darkBlue"
        android:textAlignment="center"
        android:textSize="16sp"/>


</RelativeLayout>
