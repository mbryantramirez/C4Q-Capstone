<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightBlue"
    tools:context="nyc.c4q.capstone.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_weight="4"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/community_logo"/>

        <TextView
            android:id="@+id/login_welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="because it takes a village"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/login_username_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username:" />

        <EditText
            android:id="@+id/login_username_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email Address"
            android:inputType="textWebEmailAddress" />

        <TextView
            android:id="@+id/login_password_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password:" />

        <EditText
            android:id="@+id/login_password_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:inputType="textWebPassword" />


        <Button
            android:id="@+id/login_submit_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:paddingHorizontal="16dp"
            android:background="@drawable/rounded_button"
            android:text="Submit"
            android:textColor="@color/darkBlue"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="or" />

        <Button
            android:id="@+id/login_register_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:paddingHorizontal="16dp"
            android:text="Click to register"
            android:textColor="@color/darkBlue"
            android:textSize="10sp"
            android:background="@drawable/rounded_button"/>

    </LinearLayout>

</LinearLayout>
